<Window x:Class="Kursovva.AddTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Створення нового тесту" Height="550" Width="600"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <Grid Margin="20">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <materialDesign:PackIcon Kind="FileDocumentEdit" Width="30" Height="30" Foreground="#673AB7" VerticalAlignment="Center"/>
                <TextBlock Text="Новий Тест" FontSize="24" FontWeight="Bold" Margin="10,0,0,0" Foreground="#673AB7" VerticalAlignment="Center"/>
            </StackPanel>

            <TextBox x:Name="txtTitle" materialDesign:HintAssist.Hint="Назва тесту "
                     Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,10" TextChanged="txtTitle_TextChanged"/>

            <TextBox x:Name="txtDescription" materialDesign:HintAssist.Hint="Опис тесту"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}" Height="80" 
                     TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,10"
                     AcceptsReturn="True"/>

            <ComboBox x:Name="cmbSubject" materialDesign:HintAssist.Hint="Оберіть предмет"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}" Margin="0,10"
                      DisplayMemberPath="Name" SelectedValuePath="Id"/>

            <TextBlock Text="Час на виконання (хвилин):" Margin="0,15,0,5" Foreground="Gray" FontWeight="Bold"/>
            <DockPanel Margin="0,5">
                <Border Background="#673AB7" CornerRadius="5" Width="50" Height="30" Margin="0,0,10,0">
                    <TextBlock Text="{Binding ElementName=sliderTime, Path=Value}" 
                               Foreground="White" FontWeight="Bold" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <Slider x:Name="sliderTime" Minimum="5" Maximum="120" Value="30" 
                        TickFrequency="5" IsSnapToTickEnabled="True" 
                        AutoToolTipPlacement="TopLeft" Cursor="Hand"/>
            </DockPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,40,0,0">
                <Button Content="Скасувати" Style="{StaticResource MaterialDesignFlatButton}" 
                        IsCancel="True" Height="40" Margin="0,0,10,0"/>

                <Button Content="ЗБЕРЕГТИ ТЕСТ" Click="BtnSave_Click" 
                        Style="{StaticResource MaterialDesignRaisedButton}" Height="40" Width="150"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>