<Window x:Class="Kursovva.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Керування користувачами" Height="600" Width="900"
        WindowStartupLocation="CenterScreen" FontFamily="{materialDesign:MaterialDesignFont}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <materialDesign:Card Grid.Row="0" Margin="10" Padding="15" Background="#D32F2F" UniformCornerRadius="6">
            <DockPanel>
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="AccountSupervisor" Width="30" Height="30" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="Список користувачів" Foreground="White" FontSize="20" FontWeight="Bold" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <Button Content="+ ДОДАТИ КОРИСТУВАЧА" Click="BtnAddUser_Click"
                        Style="{StaticResource MaterialDesignRaisedButton}" 
                        Background="White" Foreground="#D32F2F" BorderBrush="White"
                        HorizontalAlignment="Right" DockPanel.Dock="Right"/>
            </DockPanel>
        </materialDesign:Card>

        <DataGrid x:Name="UsersGrid" Grid.Row="1" Margin="10" AutoGenerateColumns="False" 
                  IsReadOnly="True" CanUserAddRows="False"
                  materialDesign:DataGridAssist.CellPadding="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Логін" Binding="{Binding Username}" Width="150"/>
                <DataGridTextColumn Header="ПІБ" Binding="{Binding FullName}" Width="*"/>
                <DataGridTextColumn Header="Роль" Binding="{Binding Role}" Width="100"/>

                <DataGridTemplateColumn Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Видалити" Click="BtnDeleteUser_Click" Tag="{Binding Id}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}" 
                                    Foreground="Red" BorderBrush="Red" Height="25" Padding="5,0"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="2" Content="Закрити" Click="BtnClose_Click" Style="{StaticResource MaterialDesignFlatButton}" Margin="10"/>
    </Grid>
</Window>