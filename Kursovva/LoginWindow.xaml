<Window x:Class="Kursovva.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Вхід у систему" Height="550" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <Border CornerRadius="20" Background="#F0F2F5" MouseDown="Window_MouseDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="220"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#673AB7" CornerRadius="20,20,0,0">
                <Grid>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="School" Width="80" Height="80" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock Text="SmartTest System" Foreground="White" FontSize="26" FontWeight="Bold" Margin="0,10,0,0"/>
                    </StackPanel>

                    <Button HorizontalAlignment="Right" VerticalAlignment="Top" 
                            Margin="15" Width="30" Height="30"
                            Style="{StaticResource MaterialDesignIconForegroundButton}"
                            Click="BtnExit_Click" ToolTip="Закрити">
                        <materialDesign:PackIcon Kind="Close" Foreground="White"/>
                    </Button>
                </Grid>
            </Border>

            <materialDesign:Card Grid.RowSpan="2" Width="380" VerticalAlignment="Center" HorizontalAlignment="Center"
                                 UniformCornerRadius="15" materialDesign:ElevationAssist.Elevation="Dp4"
                                 Padding="30" Margin="0,80,0,0" Background="White">
                <StackPanel>
                    <TextBlock Text="Ласкаво просимо!" HorizontalAlignment="Center" 
                               FontSize="22" FontWeight="Bold" Foreground="#444"/>

                    <TextBlock Text="Введіть дані для входу" HorizontalAlignment="Center" 
                               FontSize="14" Foreground="Gray" Margin="0,5,0,25"/>

                    <TextBox x:Name="txtUsername"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Логін"
                             materialDesign:HintAssist.IsFloating="True"
                             Margin="0,10" Height="55" FontSize="15" 
                             Padding="10" VerticalContentAlignment="Center"/>

                    <PasswordBox x:Name="txtPassword"
                                 Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                 materialDesign:HintAssist.Hint="Пароль"
                                 materialDesign:HintAssist.IsFloating="True"
                                 Margin="0,10" Height="55" FontSize="15" 
                                 Padding="10" VerticalContentAlignment="Center"/>

                    <Button x:Name="btnLogin" Click="BtnLogin_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Content="УВІЙТИ" Height="50" Margin="0,20,0,10"
                            materialDesign:ButtonAssist.CornerRadius="5" FontSize="16" FontWeight="Bold"/>

                    <Button Content="Немає акаунту? Зареєструватися" Click="BtnGoToRegister_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="#673AB7" Cursor="Hand" Height="30" FontSize="12"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </Border>
</Window>