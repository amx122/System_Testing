<Window x:Class="Kursovva.AddQuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Питання" Height="650" Width="600" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="Нове питання" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Foreground="#673AB7"/>

            <TextBox x:Name="txtQuestion" materialDesign:HintAssist.Hint="Текст питання" 
                     Style="{StaticResource MaterialDesignOutlinedTextBox}" 
                     Height="80" TextWrapping="Wrap" Margin="0,0,0,20" AcceptsReturn="True"/>

            <GroupBox Header="Зображення до питання (необов'язково)" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Button Content="Завантажити фото..." Click="BtnUploadImage_Click" 
                                Style="{StaticResource MaterialDesignOutlinedButton}" Height="30" FontSize="12"/>
                        <Button Content="Видалити фото" Click="BtnClearImage_Click" 
                                Style="{StaticResource MaterialDesignFlatButton}" Foreground="Red" Margin="10,0,0,0" Height="30" FontSize="12"/>
                    </StackPanel>

                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Height="150" Margin="0,10,0,0" Background="#FAFAFA">
                        <Image x:Name="imgPreview" Stretch="Uniform" Source="{x:Null}"/>
                    </Border>
                </StackPanel>
            </GroupBox>

            <TextBlock Text="Варіанти відповідей (позначте правильні):" FontWeight="Bold" Margin="0,0,0,5"/>
            <StackPanel>
                <DockPanel Margin="0,5">
                    <CheckBox x:Name="cbCorrect1" Margin="0,0,10,0"/>
                    <TextBox x:Name="ans1" materialDesign:HintAssist.Hint="Відповідь А" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                </DockPanel>

                <DockPanel Margin="0,5">
                    <CheckBox x:Name="cbCorrect2" Margin="0,0,10,0"/>
                    <TextBox x:Name="ans2" materialDesign:HintAssist.Hint="Відповідь Б" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                </DockPanel>

                <DockPanel Margin="0,5">
                    <CheckBox x:Name="cbCorrect3" Margin="0,0,10,0"/>
                    <TextBox x:Name="ans3" materialDesign:HintAssist.Hint="Відповідь В" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                </DockPanel>

                <DockPanel Margin="0,5">
                    <CheckBox x:Name="cbCorrect4" Margin="0,0,10,0"/>
                    <TextBox x:Name="ans4" materialDesign:HintAssist.Hint="Відповідь Г" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                </DockPanel>
            </StackPanel>

            <Button Content="ЗБЕРЕГТИ ПИТАННЯ" Click="BtnSave_Click" Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,30,0,0" Height="45"/>
        </StackPanel>
    </ScrollViewer>
</Window>