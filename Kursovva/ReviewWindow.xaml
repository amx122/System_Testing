<Window x:Class="Kursovva.ReviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Аналіз результатів" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <materialDesign:Card Margin="10" Padding="15" Background="{DynamicResource PrimaryHueMidBrush}" Foreground="White">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="ClipboardCheck" Width="25" Height="25" VerticalAlignment="Center"/>
                <TextBlock Text="Детальний аналіз помилок" Margin="10,0" FontSize="18" FontWeight="Bold"/>
            </StackPanel>
        </materialDesign:Card>

        <ScrollViewer Grid.Row="1">
            <ItemsControl x:Name="ListQuestions" Margin="10">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card Margin="0,0,0,10" Padding="10">
                            <StackPanel>
                                <TextBlock Text="{Binding QuestionText}" FontWeight="Bold" FontSize="16" TextWrapping="Wrap"/>

                                <TextBlock Text="{Binding StatusText}" Foreground="{Binding StatusColor}" FontWeight="Bold" Margin="0,5"/>

                                <Separator Margin="0,5"/>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Ваша відповідь: " FontWeight="Bold"/>
                                    <TextBlock Text="{Binding UserAnswerText}" Foreground="{Binding UserAnswerColor}" TextWrapping="Wrap"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Visibility="{Binding ShowCorrectAnswer}">
                                    <TextBlock Text="Правильна відповідь: " FontWeight="Bold"/>
                                    <TextBlock Text="{Binding CorrectAnswerText}" Foreground="Green" TextWrapping="Wrap"/>
                                </StackPanel>
                            </StackPanel>
                        </materialDesign:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Button Grid.Row="2" Content="Закрити" Click="BtnClose_Click" Margin="10" HorizontalAlignment="Right"/>
    </Grid>
</Window>